  <section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if enhanced_cart.empty? %>
  <div class="alert alert-info" role="alert">
      <p>Your cart is currently empty.</p>
      <p><a href="<%= root_path %>">Return to the home page</a></p>
    </div>
  <% else %>
      <div class="panel panel-default items">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th colspan="2">Product</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% enhanced_cart.each do |item| %>
              <%= render 'item', product: item[:product], quantity: item[:quantity].to_i %>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4">
                TOTAL:
              </th>
              <th>
                <%= formatted_price cart_subtotal_cents / 100.0 %>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= form_tag orders_path do %>
          <!-- Existing Stripe checkout script -->
          <div class="row">
            <div class="col-xs-12">
              <%= form_tag orders_path do %>
                <script
                  src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-amount="<%= cart_subtotal_cents %>"
                  data-name="Jungle"
                  data-description="Khurram Virani's Jungle Order"
                  data-locale="auto"
                  data-email="kvirani@gmail.com"
                  data-currency="cad">
                </script>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>
